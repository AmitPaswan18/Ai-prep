generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  clerkUserId   String   @unique
  email         String   @unique
  name          String?
  createdAt     DateTime @default(now())

  interviews    Interview[]
  subscription  Subscription?
}

model Interview {
  id           String   @id @default(uuid())
  userId       String?
  title        String
  description  String?
  category     InterviewCategory @default(TECHNICAL)
  difficulty   InterviewDifficulty @default(INTERMEDIATE)
  duration     Int      @default(30) 
  rating       Float    @default(0)
  completions  Int      @default(0)
  topics       String[] 
  icon         String?  
  color        String?  
  role         String?
  level        String? 
  status       InterviewStatus @default(DRAFT)
  isTemplate   Boolean  @default(false) 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User?    @relation(fields: [userId], references: [id])
  questions    InterviewQuestion[]
  results      InterviewResult?
  skillScores  SkillScore[]
}

model InterviewQuestion {
  id           String   @id @default(uuid())
  interviewId  String
  question     String
  answer       String?
  score        Int?
  feedback     String?

  interview    Interview @relation(fields: [interviewId], references: [id])
}

model InterviewResult {
  id           String   @id @default(uuid())
  interviewId  String   @unique
  overallScore Int
  summary      String
  strengths    String
  weaknesses   String
  createdAt    DateTime @default(now())

  interview    Interview @relation(fields: [interviewId], references: [id])
}

enum InterviewStatus {
  DRAFT
  IN_PROGRESS
  COMPLETED
}

enum InterviewCategory {
  TECHNICAL
  BEHAVIORAL
  SYSTEM_DESIGN
  CASE_STUDY
}

enum InterviewDifficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}


model SkillScore {
  id          String @id @default(uuid())
  interviewId String
  skillName   String
  score       Float

  interview   Interview @relation(fields: [interviewId], references: [id])

  @@unique([interviewId, skillName], name: "interviewId_skillName")
}

model Subscription {
  id                 String   @id @default(uuid())
  userId             String   @unique
  plan               String
  status             String
  stripeCustomerId   String?
  createdAt          DateTime @default(now())

  user               User     @relation(fields: [userId], references: [id])
}
