{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "GEMINI_API_KEY",
        "CLERK_SECRET_KEY",
        "CLERK_PUBLISHABLE_KEY",
        "FRONTEND_URL",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
